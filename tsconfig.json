{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"lib": ["ES2020"],
		"types": ["node"],
		"declaration": false,
		"sourceMap": false
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
